<Window x:Class="h1.Views.GroupSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:h1.Views"
        mc:Ignorable="d"
        Title="Group Settings" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <!-- Add UI elements to edit Group properties -->
            <TextBlock Text="Group Settings" FontWeight="Bold" Margin="10"/>
            <TextBox Text="{Binding DebugString, UpdateSourceTrigger=PropertyChanged}" Margin="10"/>
            <!-- Add more UI elements as needed -->
            <Button Content="Save" Click="SaveButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
