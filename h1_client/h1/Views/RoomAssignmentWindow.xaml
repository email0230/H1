<Window x:Class="h1.Views.RoomAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:h1.Views"
        mc:Ignorable="d"
        Title="Room Assignment" Height="450" Width="800">
    <Grid>
        <!-- Top Row: Title and Buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="#007ACC" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <TextBlock Text="ROOM ASSIGNMENT" Foreground="White" FontWeight="Bold" FontSize="20" Margin="10" />
            <Button x:Name="ManualRoomAssignmentButton" Content="Manual (Debug)" Width="120" Margin="5" Click="ManualRoomAssignmentButton_Click" />
            <Button x:Name="AutoRoomAssignmentButton" Content="Automatic (Under Construction)" Width="180" Margin="5" Click="AutoRoomAssignmentButton_Click" />
        </StackPanel>

        <!-- Container for dynamic content -->
        <ContentControl Grid.Row="1" Name="contentContainer" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Label>default text here</Label>
        </ContentControl>
    </Grid>
</Window>
